#!/bin/sh

{% if zfs_snapshots.monthly is defined %}
# Only call zfs-auto-snapshot if it's available
which zfs-auto-snapshot > /dev/null || exit 0

{% for volume in zfs_snapshots.monthly %}
/usr/local/sbin/zfs-auto-snapshot --quiet --syslog --label=monthly --keep={{ volume.keep }} {{ volume.name }}
{% endfor %}
{% else %}
# Do not take any snapshots
{% endif %}